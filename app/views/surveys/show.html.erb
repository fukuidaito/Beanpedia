<% provide(:title, "アンケート結果") %>
<div class="card mb-5 mt-5 mx-auto" style="max-width: 500px; background: #f0f0f0; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
  <div class="card-body">
    <h5 class="card-title text-center" style="font-family: 'Roboto', sans-serif; color: #444; font-size: 24px;">コーヒー豆の提案</h5>
    <div class="card-text text-center">
      <ul class="list-group list-group-flush">
        <li class="list-group-item" style="background: none; border: none;">
          <strong>酸味レベル:</strong> <span class="badge bg-success"><%= @survey.acidity %></span>
        </li>
        <li class="list-group-item" style="background: none; border: none;">
          <strong>苦味レベル:</strong> <span class="badge bg-warning text-dark"><%= @survey.bitterness %></span>
        </li>
        <li class="list-group-item" style="background: none; border: none;">
          <strong>ボディレベル:</strong> <span class="badge bg-info"><%= @survey.body %></span>
        </li>
        <li class="list-group-item" style="background: none; border: none;">
          <strong>風味:</strong> <span class="badge bg-primary"><%= @survey.flavor %></span>
        </li>
      </ul>
    </div>
    <% if @survey.suggestion.present? %>
      <p class="mt-3" style="font-family: 'Roboto', sans-serif; color: #666; font-size: 16px;">
        <strong>提案:</strong> <%= @survey.suggestion %>
      </p>
    <% end %>
  </div>
</div>
<div class="text-center">
  <%= link_to '投稿一覧に戻る', boards_path, class: 'btn btn-secondary mt-3' %>
</div>
