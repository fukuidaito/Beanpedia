<% content_for(:title, t('.title')) %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @board, class: "new_board" do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= f.label :address, class: "form-label fw-bold"%>
        <%= f.text_field :address, autofocus: true,placeholder: "住所を入力してください", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: 10 %>
        </div>
        <div class="form-group">
          <%= f.label :board_image %>
          <%= f.file_field :board_image, class: 'form-control mb-3', accept: 'image/*', onchange: 'previewImage(event)' %>
          <%= f.hidden_field :board_image_cache %>
        </div>
        <div class="mt-3 mb-3">
          <%= image_tag @board.board_image.url, id: 'preview', size: '300x200' %>
        </div>
        <div class="mt-3 mb-3">
          <%= f.label :acidity, '酸味' %>
          <%= f.select :acidity, Board.acidities.keys.map { |key| [key.humanize, key] }, {}, {class: "form-select"} %>
        </div>
        <div class="mt-3 mb-3">
          <%= f.label :bitterness, '苦味' %>
          <%= f.select :bitterness, Board.bitternesses.keys.map { |key| [key.humanize, key] }, {}, {class: "form-select"} %>
         </div> 
          <div class="mt-3 mb-3">
          <%= f.label :richness, 'コク' %>
          <%= f.select :richness, Board.richnesses.keys.map { |key| [key.humanize, key] }, {}, {class: "form-select"} %>
          </div>
        <%= f.submit class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>
</div>


<script type="module">
  import { previewImage } from "preview"

  document.addEventListener("DOMContentLoaded", () => {
    document.getElementById("board_board_image").addEventListener("change", previewImage);
  });
</script>