<% content_for(:title, t('.title')) %>
<div class="container ">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <!-- ここからform_withを使う形に修正してください -->     
      <%= form_with(model: @board, url: boards_path) do |form| %>
        <%= render 'boards/errors_message' %>
        <div class="mb-3">
          <%= form.label :title, "タイトル" %>
          <%= form.text_field :title, class: "form-control", id: "board_title" %>
        </div>
        <div class="mb-3">
          <%= form.label :body, "本文" %>
          <%= form.text_area :body, class: "form-control", id: "board_body", rows: 10, style: "height: 200px" %>
        </div>
        <%= form.submit "登録する", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>