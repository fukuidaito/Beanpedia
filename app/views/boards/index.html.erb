<div class="container">
  <div class="row">
    <div class="col-lg-10 offset-lg-1 mb-4">
      <!-- 検索フォーム -->
      <form>
        <div class="input-group mb-3">
          <input class="form-control" placeholder="検索ワード" type="search" />
          <div class="input-group-append">
            <input type="submit" value="検索" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if @boards.present? %>
        <%= render @boards %>
      <% else %>
        <p><%= t('.no_result') %></p> 
      <% end %>
    </div>
  </div>
</div>

