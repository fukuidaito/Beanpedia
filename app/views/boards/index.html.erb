<% provide(:title, "投稿一覧") %>


<div class="container-fluid bg-white mb-4 rounded">
<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-sm-4 mt-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">通常検索</h5>
          <%= render "boards/runsack", mode: "normal" %>
        </div>
      </div>
    </div> 
    <div class="col-sm-4 mt-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">クイック検索</h5>
          <%= render "boards/search_form", mode: "quick" %>
        </div>
      </div>
    </div>   
  </div>
</div>
      <% if @boards.present? %>
        <div class="container-fluid mt-4">
          <div class="row">
            <div class="row mb-2 mt-6">
              <%= render @boards %>
            </div>
          </div>
        </div>
      <% else %>
        <p>掲示板がありません</p>
      <% end %>
      <div class="pagination-container mt-4 flex justify-center">
        <%= paginate @boards %>
      </div>
    </main>
  </div>
</div>


<%= render 'boards/new_board_button' %>