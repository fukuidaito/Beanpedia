<h1 class="text-center mb-4 text-white">お気に入りランキング</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <div class="list-group">
        <% @boards.each_with_index do |board, index| %>
          <div class="list-group-item list-group-item-action d-flex align-items-center p-3 mb-2 border rounded shadow-sm" style="animation-delay: <%= index * 0.1 %>s;">
            <span class="rank me-3"><%= index + 1 %>位</span>
            <%= image_tag board.board_image.url, class: 'rounded-circle me-3', width: '60', height: '60' %>
            <div class="flex-grow-1">
              <%= link_to board.title, board_path(board), class: "h5 mb-0 text-decoration-none text-dark" %>
              <p class="mb-0 text-muted small">(お気に入り数: <%= board.bookmarks_count %>)</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("turbo:load", function() {
  const items = document.querySelectorAll(".list-group-item");
  items.forEach((item, index) => {
    item.style.animationDelay = `${index * 0.1}s`;
    item.style.opacity = "1";
    item.style.transform = "translateY(0)";
  });
});
</script>