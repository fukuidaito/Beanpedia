<% unless board.nil? %>
  <div class="col-md-4">
    <div id="board-id-<%= board.id %>" class="card mb-4">
      <%= image_tag board.board_image.url, class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
      <h3><%= link_to board.title, board_path(board), class: "card-title" %></h3>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= icon 'far', 'user' %>
            <%= board.user.name %>
          </li>
          <li class="list-inline-item">
            <%= icon 'far', 'calendar' %>
            <%= l board.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= board.body %></p>
        <%= render 'crud_menus', board: board if current_user.own?(board) %>
      </div>
    </div>
  </div>
<% end %>
