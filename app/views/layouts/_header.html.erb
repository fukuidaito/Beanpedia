<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "cafequest", root_path, id: "logo" %>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
    
      <%= link_to profile_path, id: 'header-profile', class: "nav navbar-nav navbar-right collapse navbar-collapse", data: { bs_toggle: 'dropdown' }, aria: { expanded: 'false', haspopup: 'true' } do %>
        <% if current_user %>
          <%= image_tag current_user.avatar_url, alt: 'sample', class: 'navbar-img rounded-circle', size: '40x40' %>
        <% else %>
        <% end %>
      <% end %>


      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to "posts", boards_path %></li>
        <li><%= link_to "Home", root_path %></li>
        <li class="nav-item dropdown">
        <button type="button" id="dropdownMenu" class="btn btn-link nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          メニュー▼
        </button>
        <ul class="dropdown-menu">
        <% if logged_in? %>
        <li><%= link_to "posts", boards_path %></li>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Users", '#' %></li>
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "Settings", '#' %></li>
        <li><%= link_to "Log out", logout_path, data: { turbo_method: :delete }  %></li>
        <% else %>
        <li><%= link_to "Log in", login_path %></li>
        <% end %>
        </ul>
      </ul>
    </nav>
  </div>
</header>
