<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "cafequest", root_path, id: "logo" %>

    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", '#' %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>

        <%= link_to profile_path, id: 'header-profile', class: "nav navbar-nav navbar-right collapse navbar-collapse", data: { bs_toggle: 'dropdown' }, aria: { expanded: 'false', haspopup: 'true' } do %>
          <% if current_user %>
            <%= image_tag current_user.avatar_url, alt: 'sample', class: 'navbar-img rounded-circle', size: '40x40' %>
          <% else %>
          <% end %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
