  <nav class='navbar navbar-expand-lg navigation navbar-light bg-light'>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>
    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to ' 掲示板 ', '', class: 'nav-link dropdown-toggle', 'data-bs-toggle': 'dropdown', 'aria-haspopup': 'true', 'aria-expanded': 'false' %>
          <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to '掲示板一覧', boards_path, class: 'dropdown-item' %>
            <%= link_to '掲示板作成', new_board_path, class: 'dropdown-item' %>
          </div>
        </li>

        <li class='nav-link'>
          <%= link_to 'ブックマーク一覧', bookmarks_boards_path, class: 'nav-link' %>
        </li>

        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to '#', id: 'header-profile', class: "nav-link", data: { bs_toggle: 'dropdown' }, aria: { expanded: 'false', haspopup: 'true' }  do %>
            <%= image_tag current_user.avatar_url, class: 'rounded-circle mr15', size: '40x40'%>
          <% end %>
          <div class='dropdown-menu dropdown-menu-end'>
            <div class='dropdown-item'><%= current_user.name %></div>
            <div class='dropdown-divider'></div>
            <%= link_to 'プロフィール', '/profile', class: 'dropdown-item' %>
            <%= link_to 'ログアウト', logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %>
          </div>
        </li>
      </ul>
    </div>
  </header>