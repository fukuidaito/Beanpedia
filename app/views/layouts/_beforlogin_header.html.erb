<header>
  <nav class='navbar navbar-expand-lg navbar-dark bg-dark mb-0'>
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
      <%= image_tag 'logo.png', size: '50x50', class: 'me-2 mr-2 rounded-circle ms-4' %>
      <h1 class="mb-0 ms-2">Beanpedia</h1>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item">
          <%= link_to "ログイン", new_user_session_path, class: "nav-link btn btn-outline-light ms-3" %>
        </li>
        <li class="nav-item">
          <%= link_to "新規登録", new_user_registration_path, class: "nav-link btn btn-outline-light ms-3" %>
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>
  .navbar-brand h1 {
    font-size: 1.5rem;
    color: white;
  }

  .nav-link {
    font-size: 1rem;
    padding: 0.5rem 1rem;
  }

  .navbar-toggler {
    border: none;
  }

  .navbar-toggler-icon {
    color: white;
  }

  @media (max-width: 576px) {
    .navbar-brand h1 {
      font-size: 1.25rem;
    }
    .nav-link {
      font-size: 0.875rem;
    }
  }
</style>
